<div class="container mt-5">
    <div class="row">
        <div class="col-12 text-center">
            <h3 class="mb-4 text-primary">Admin Dashboard</h3>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-lg border-0">
                <div class="card-body text-center">
                    <h5 class="card-title">Manage Books</h5>
                    <p class="card-text">View, add, update, or delete books in the catalog.</p>
                    <a href="@Url.Action("Index", "Book")" class="btn btn-primary w-100">Go to Book Manager</a>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-4 mt-4 mt-md-0">
            <div class="card shadow-lg border-0">
                <div class="card-body text-center">
                    <h5 class="card-title">Logout</h5>
                    <p class="card-text">Sign out of the admin dashboard securely.</p>
                    <form asp-controller="Auth" asp-action="Logout" method="post">
                        <button type="submit" class="btn btn-danger w-100">Logout</button>
                    </form>
                </div>  
            </div>
        </div>
    </div>
</div>
