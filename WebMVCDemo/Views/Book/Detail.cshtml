@using Application.DTOs
@model BookDTO

<h2 class="text-center my-4">Book Details</h2>

<div class="container">
    <div class="row">
        <div class="col-md-6 mb-3">
            <p><strong>Title:</strong> @Model.Title</p>
            <p><strong>Author:</strong> @Model.Author</p>
            <p><strong>Publisher:</strong> @Model.Publisher</p>
            <p><strong>Price:</strong> @Model.Price.ToString("C")</p>
            <p><strong>Discount Price:</strong> @Model.DiscountPrice.ToString("C")</p>
            <p><strong>Quantity:</strong> @Model.Quantity</p>
            <p><strong>Created On:</strong> @Model.CreateOn</p>
        </div>

        <div class="col-md-6 mb-3">
            <p><strong>Description:</strong> @Model.Description</p>
            <p><strong>Is Active:</strong> @Model.IsActive</p>
            <p><strong>Category Id:</strong> @Model.CategoryId</p>
            <p><strong>Category Name:</strong> @Model.CategoryName</p>
        </div>
    </div>

    <div class="d-flex justify-content-start">
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>
