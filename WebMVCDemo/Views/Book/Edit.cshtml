@using Application.DTOs
@model BookDTO

<h2 class="text-center my-4">Edit Book</h2>

<div class="container">
    <form asp-action="Edit" method="post" class="row g-3">
        <!-- Hidden ID Field -->
        <input asp-for="Id" type="hidden" />

        <!-- Title -->
        <div class="col-md-6">
            <label asp-for="Title" class="form-label">Title</label>
            <input asp-for="Title" class="form-control" placeholder="Enter the book title" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <!-- Author -->
        <div class="col-md-6">
            <label asp-for="Author" class="form-label">Author</label>
            <input asp-for="Author" class="form-control" placeholder="Enter the author's name" />
            <span asp-validation-for="Author" class="text-danger"></span>
        </div>

        <!-- Publisher -->
        <div class="col-md-6">
            <label asp-for="Publisher" class="form-label">Publisher</label>
            <input asp-for="Publisher" class="form-control" placeholder="Enter the publisher's name" />
            <span asp-validation-for="Publisher" class="text-danger"></span>
        </div>

        <!-- Price -->
        <div class="col-md-6">
            <label asp-for="Price" class="form-label">Price</label>
            <input asp-for="Price" type="number" step="0.01" class="form-control" placeholder="Enter the price" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <!-- Discount Price -->
        <div class="col-md-6">
            <label asp-for="DiscountPrice" class="form-label">Discount Price</label>
            <input asp-for="DiscountPrice" type="number" step="0.01" class="form-control" placeholder="Enter the discount price" />
            <span asp-validation-for="DiscountPrice" class="text-danger"></span>
        </div>

        <!-- Quantity -->
        <div class="col-md-6">
            <label asp-for="Quantity" class="form-label">Quantity</label>
            <input asp-for="Quantity" type="number" class="form-control" placeholder="Enter the quantity" />
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>

        <!-- Description -->
        <div class="col-md-12">
            <label asp-for="Description" class="form-label">Description</label>
            <textarea asp-for="Description" class="form-control" rows="4" placeholder="Enter the book description"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <!-- Is Active -->
        <div class="col-md-6">
            <div class="form-check">
                <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                <label asp-for="IsActive" class="form-check-label">Is Active</label>
            </div>
        </div>

        <!-- Category -->
        <div class="col-md-6">
            <label asp-for="CategoryId" class="form-label">Category</label>
            <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-select">
                <option value="">-- Select a category --</option>
            </select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>

        <!-- Submit Button -->
        <div class="col-12">
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
