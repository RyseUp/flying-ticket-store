@using Application.DTOs

<section class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg p-4" style="max-width: 400px; width: 100%; border-radius: 12px;">
        <header class="text-center mb-4">
            <h2 class="text-primary">Welcome Back!</h2>
            <p class="text-muted">Please login to your account</p>
        </header>
        <main>
            <form asp-action="Login" method="post">
                <div class="mb-3">
                    <label for="email" class="form-label">User Email</label>
                    <input
                        type="text"
                        id="email"
                        name="email"
                        class="form-control form-control-lg"
                        placeholder="Enter your User Email"
                        required
                    />
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input
                        type="password"
                        id="password"
                        name="password"
                        class="form-control form-control-lg"
                        placeholder="Enter your password"
                        required
                    />
                </div>
                <button type="submit" class="btn btn-primary btn-lg w-100">Login</button>
            </form>

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger mt-3">
                    Invalid username or password.
                </div>
            }

            <div class="text-center mt-4">
                <p class="text-muted">Don't have an account?
                    <a asp-controller="Auth" asp-action="Register" class="text-primary">Sign Up</a>
                </p>
            </div>
        </main>
    </div>
</section>
